<Window x:Name="MyDashboard1" x:Class="IMS_SPORTS.MyDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMS_SPORTS"
        mc:Ignorable="d"
        Title="MyDashboard" Height="450" Width="800" Icon="/LOGOWPF.png">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="434" VerticalAlignment="Center" Width="194" Fill="#FFE0BBBB"/>
        <Rectangle HorizontalAlignment="Left" Height="68" Margin="194,0,0,0" VerticalAlignment="Top" Width="606" Fill="#FFC8814E"/>
        <Label x:Name="dashboard_lbl" Content="DASHBOARD" HorizontalAlignment="Left" Margin="216,18,0,0" VerticalAlignment="Top" Foreground="#FF483A24" FontFamily="Arial Black" FontSize="24" Background="{x:Null}"/>
        <Button x:Name="inventory_btn" Content="" HorizontalAlignment="Left" Margin="21,132,0,0" VerticalAlignment="Top" BorderThickness="0,0,0,0" Width="152" Height="49">
            <Button.Background>
                <ImageBrush ImageSource="/inventory.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button x:Name="prchase_btn" Content="" HorizontalAlignment="Left" Margin="21,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.496,-2.687" Width="152" Height="49" BorderThickness="0,0,0,0">
            <Button.Background>
                <ImageBrush ImageSource="/purhase.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button x:Name="userm_btn" Click="Userm_btn_Click"  Content="" HorizontalAlignment="Left" Margin="21,252,0,0" VerticalAlignment="Top" BorderThickness="0,0,0,0" Width="152" Height="49">
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="/manageuser.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="audit_btn" Content="" HorizontalAlignment="Left" Margin="21,311,0,0" VerticalAlignment="Top" Width="152" Height="49" BorderThickness="0,0,0,0" Click="audit_btn_Click">
            <Button.Background>
                <ImageBrush ImageSource="/auditlogs.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button x:Name="logout_btn" Content="" HorizontalAlignment="Left" Margin="21,371,0,0" VerticalAlignment="Top" Width="152" Height="49" BorderThickness="0,0,0,0" Click="logout_btn_Click">
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="/logouted (1).png"/>
            </Button.Background>
        </Button>
        <Button x:Name="dashboard_btn" Content="" HorizontalAlignment="Left" Margin="21,73,0,0" VerticalAlignment="Top" Width="152" Height="49" BorderThickness="0,0,0,0">
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="/dashboards.png"/>
            </Button.Background>
        </Button>
        <Image x:Name="lbl2" HorizontalAlignment="Left" Height="53" Margin="21,-2,0,0" VerticalAlignment="Top" Width="154" Source="/logout (1).png" Stretch="UniformToFill"/>
        <Rectangle x:Name="line1_rectangle" HorizontalAlignment="Left" Height="1" Margin="18,68,0,0" Stroke="Black" VerticalAlignment="Top" Width="158" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle x:Name="prchaseorderlist_rectangle" HorizontalAlignment="Left" Height="162" Margin="418,258,0,0" Stroke="Black" VerticalAlignment="Top" Width="367" RadiusX="10" RadiusY="10" Fill="#FFFFE7E7"/>
        <Rectangle x:Name="lowstockalerts_rectangle" HorizontalAlignment="Left" Height="162" Margin="224,258,0,0" Stroke="Black" VerticalAlignment="Top" Width="162" RadiusX="10" RadiusY="10" Fill="#FFFFE7E7"/>
        <Rectangle x:Name="announcements_rectangle" HorizontalAlignment="Left" Height="162" Margin="623,80,0,0" Stroke="Black" VerticalAlignment="Top" Width="162" RadiusX="10" RadiusY="10" Fill="#FFFFE7E7"/>
        <Rectangle x:Name="lastprodUpdate_rectangle" HorizontalAlignment="Left" Height="162" Margin="438,80,0,0" Stroke="Black" VerticalAlignment="Top" Width="164" RadiusX="10" RadiusY="10" Fill="#FFFFE7E7"/>
        <Label x:Name="totalprod_lbl" Content="TOTAL PRODUCTS" HorizontalAlignment="Left" Margin="216,156,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="totalcategories_lbl" Content="TOTAL CATEGORIES" HorizontalAlignment="Left" Margin="216,200,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.495,1.093" FontWeight="Bold"/>
        <DatePicker x:Name="date" HorizontalAlignment="Left" Margin="216,88,0,0" VerticalAlignment="Top" Width="191" Height="50" Padding="13,2,2,2" Background="#FF968989"/>
        <TextBox x:Name="totalproducts_txtbox" HorizontalAlignment="Left" Margin="341,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" RenderTransformOrigin="1.103,0.615" BorderBrush="Black" Height="25"/>
        <TextBox x:Name="totalcategories_txtbox" HorizontalAlignment="Left" Margin="341,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" BorderBrush="Black" Height="25"/>

    </Grid>
</Window>
